{
  "designStyle": "modern enterprise dashboard",
  "colorPalette": {
    "primary": "#1677FF",
    "secondary": "#3C8DBC",
    "accent": "#F5222D",
    "success": "#52C41A",
    "warning": "#FAAD14",
    "error": "#FF4D4F",
    "backgroundPrimary": "#F5F5F5",
    "backgroundSecondary": "#FFFFFF",
    "textPrimary": "#000000",
    "textSecondary": "#666666",
    "textPlaceholder": "#999999",
    "border": "#E0E0E0"
  },
  "typography": {
    "fontFamily": "'Microsoft YaHei', 'Helvetica Neue', Arial, sans-serif",
    "heading1": {
      "fontSize": "20px",
      "fontWeight": "600",
      "lineHeight": "28px"
    },
    "heading2": {
      "fontSize": "16px",
      "fontWeight": "600",
      "lineHeight": "24px"
    },
    "body": {
      "fontSize": "14px",
      "fontWeight": "400",
      "lineHeight": "22px"
    },
    "caption": {
      "fontSize": "12px",
      "fontWeight": "400",
      "lineHeight": "18px"
    }
  },
  "spacing": {
    "baseUnit": "4px",
    "small": "4px",
    "medium": "8px",
    "large": "16px",
    "xLarge": "24px"
  },
  "visualHierarchy": {
    "emphasis": ["fontWeight", "color", "fontSize"],
    "hierarchyLevels": ["heading1", "heading2", "body", "caption"],
    "colorCues": {
      "positive": "#52C41A",
      "negative": "#F5222D",
      "neutral": "#666666"
    }
  },
  "structuralElements": {
    "layoutPrinciples": {
      "model": "grid",
      "columns": 12,
      "gutter": "16px",
      "alignment": "left-aligned with padding"
    },
    "components": {
      "buttons": {
        "default": {
          "backgroundColor": "#1677FF",
          "borderRadius": "4px",
          "textColor": "#FFFFFF",
          "fontSize": "14px",
          "padding": "8px 16px"
        },
        "hover": {
          "backgroundColor": "#4096FF"
        },
        "active": {
          "backgroundColor": "#0958D9"
        }
      },
      "inputFields": {
        "borderColor": "#D9D9D9",
        "borderRadius": "4px",
        "placeholderColor": "#999999",
        "fontSize": "14px",
        "padding": "8px 12px",
        "focusBorderColor": "#1677FF"
      },
      "cards": {
        "backgroundColor": "#FFFFFF",
        "boxShadow": "0 2px 8px rgba(0, 0, 0, 0.08)",
        "borderRadius": "6px",
        "padding": "16px",
        "marginBottom": "16px"
      },
      "icons": {
        "style": "outlined",
        "size": "16px",
        "color": "#666666",
        "activeColor": "#1677FF"
      }
    }
  },
  "criticalAttributes": {
    "cornerRadius": "4px",
    "shadows": {
      "default": "0 2px 8px rgba(0, 0, 0, 0.08)"
    },
    "iconography": {
      "style": "outlined",
      "library": "custom/svg",
      "usage": "icons are placed next to labels or inside buttons to enhance recognition"
    }
  }
}
