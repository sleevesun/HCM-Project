{
  "designStyle": {
    "colorPalette": {
      "primary": {
        "main": "#0066FF",
        "light": "#4B9EFF",
        "dark": "#0047B3"
      },
      "secondary": {
        "blue": "#E5F0FF",
        "gray": "#F5F5F5"
      },
      "accent": {
        "green": "#4CAF50",
        "red": "#FF4D4F"
      },
      "text": {
        "primary": "#262626",
        "secondary": "#595959",
        "disabled": "#8C8C8C"
      },
      "background": {
        "default": "#FFFFFF",
        "secondary": "#F5F7FA"
      }
    },
    "typography": {
      "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
      "headings": {
        "h1": {
          "fontSize": "24px",
          "fontWeight": 600,
          "lineHeight": 1.4
        },
        "h2": {
          "fontSize": "20px",
          "fontWeight": 600,
          "lineHeight": 1.4
        },
        "h3": {
          "fontSize": "16px",
          "fontWeight": 600,
          "lineHeight": 1.4
        }
      },
      "body": {
        "fontSize": "14px",
        "fontWeight": 400,
        "lineHeight": 1.5
      },
      "small": {
        "fontSize": "12px",
        "fontWeight": 400,
        "lineHeight": 1.5
      }
    },
    "spacing": {
      "unit": 8,
      "xs": 4,
      "sm": 8,
      "md": 16,
      "lg": 24,
      "xl": 32
    }
  },
  "visualHierarchy": {
    "emphasis": [
      "size contrast",
      "color contrast",
      "spacing",
      "typography weight"
    ]
  },
  "structuralElements": {
    "layoutPrinciples": {
      "type": "grid",
      "columns": 24,
      "gutter": 16,
      "alignment": "left",
      "containerWidth": "fluid"
    }
  },
  "components": {
    "buttons": {
      "primary": {
        "background": "#0066FF",
        "color": "#FFFFFF",
        "border": "none",
        "borderRadius": "4px",
        "padding": "6px 16px",
        "states": {
          "hover": {
            "background": "#4B9EFF"
          },
          "active": {
            "background": "#0047B3"
          },
          "disabled": {
            "background": "#D9D9D9"
          }
        }
      }
    },
    "inputFields": {
      "default": {
        "height": "32px",
        "padding": "4px 11px",
        "background": "#FFFFFF",
        "border": "1px solid #D9D9D9",
        "borderRadius": "4px",
        "states": {
          "focus": {
            "borderColor": "#0066FF",
            "boxShadow": "0 0 0 2px rgba(0,102,255,0.2)"
          },
          "disabled": {
            "background": "#F5F5F5",
            "borderColor": "#D9D9D9"
          }
        }
      }
    },
    "cards": {
      "default": {
        "background": "#FFFFFF",
        "borderRadius": "4px",
        "padding": "24px",
        "boxShadow": "0 2px 8px rgba(0,0,0,0.08)"
      }
    },
    "icons": {
      "style": "outlined",
      "sizes": {
        "small": 16,
        "default": 20,
        "large": 24
      },
      "color": "currentColor"
    }
  },
  "criticalAttributes": {
    "cornerRadius": {
      "small": "2px",
      "default": "4px",
      "large": "8px"
    },
    "shadows": [
      {
        "level": 1,
        "value": "0 2px 8px rgba(0,0,0,0.08)"
      },
      {
        "level": 2,
        "value": "0 4px 12px rgba(0,0,0,0.12)"
      }
    ],
    "iconography": {
      "style": "outlined",
      "strokeWidth": 1.5,
      "alignment": "center"
    }
  }
}